
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../resources/images/login.jpg"></image>
  </view>
  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../resources/images/username.png"></image>
      <input class="inputText" placeholder="账号" value="{{username}}" bindinput="usernameInput" />
    </view>

    <view class="line"></view>
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../resources/images/password.png"></image>
      <input class="inputText" password="true" placeholder="密码" value="{{password}}" password bindinput="passwordInput" />
    </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" loading="{{loading}}" bindtap="handleLogin">登录</button>
    </view>
  </view>
</view>
